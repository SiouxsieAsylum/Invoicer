<!DOCTYPE html>
<html>
<head>
  <title></title>
  <%include ../partials/meta.ejs%>
</head>
<body>
  <%include ../partials/toolbar.ejs%>

  <div id="toolbar-send">
    <p>Send Mail</p>
    <button id="email-submit" type="submit" value="submit" form="email-form"> <span id="button-span"></span> &#10147;</button>
  </div>

  <div id="email-container">
  <form method='POST' action='/api/contacts/<%=contact.contactid %>/emails/send' id="email-form">
    <input id="to" name="to" placeholder="Recipient" value="<%= contact.email%>"/>
    <input id="subject" name="subject" placeholder="Subject" />
    <textarea id="text" name="text" value="<%= template.template %>"> <%= template.template %>

      Amount owed: <%= contact.owed %> for <%= contact.service %> on <%= contact.date_of_service %>
    </textarea>
  </form>
  </div>

</body>
</html>
